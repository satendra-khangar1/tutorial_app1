<body>
  <div class="container mt-4">
    <h1 class="mb-4">Categories</h1>

    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <th scope="row"><%= category.id %></th>
            <td><%= link_to category.name, category_path(category) %></td>
            <td>
              <%= link_to 'View', category_path(category), class: 'btn btn-primary btn-sm' %>
              <%#= link_to 'New Question Answer', new_category_question_answer_path(category), class: 'btn btn-primary btn-sm ms-2' %>
              <%= link_to 'View All Question Answer', category_question_answers_path(category), class: 'btn btn-primary btn-sm ms-2' %>

              <!-- Add more actions here if needed -->
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to 'New Category', new_category_path, class: 'btn btn-success mt-4' %>